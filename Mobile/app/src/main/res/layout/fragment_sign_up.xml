<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.intro.SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:textSize="28sp"
                android:textColor="#0A0615"
                android:fontFamily="@font/poppins_semibold"
                android:text="회원가입"
                android:layout_marginTop="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="22dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameInputLayout"
                    app:boxStrokeColor="#4894fe"
                    app:hintEnabled="true"
                    android:hint="이름"
                    app:hintTextColor="#404B52"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textColorHighlight="#4894fe"
                        android:textSelectHandle="@drawable/select_handler"
                        android:textSelectHandleLeft="@drawable/select_handler"
                        android:textSelectHandleRight="@drawable/select_handler"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:fontFamily="@font/poppins_reqular"
                        android:id="@+id/name_area"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailInputLayout"
                    app:boxStrokeColor="#4894fe"
                    app:hintEnabled="true"
                    android:hint="이메일"
                    app:hintTextColor="#404B52"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textColorHighlight="#4894fe"
                        android:textSelectHandle="@drawable/select_handler"
                        android:textSelectHandleLeft="@drawable/select_handler"
                        android:textSelectHandleRight="@drawable/select_handler"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:fontFamily="@font/poppins_reqular"
                        android:id="@+id/email_area"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phoneNumberInputLayout"
                    app:boxStrokeColor="#4894fe"
                    app:hintEnabled="true"
                    android:hint="전화번호"
                    app:hintTextColor="#404B52"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textColorHighlight="#4894fe"
                        android:textSelectHandle="@drawable/select_handler"
                        android:textSelectHandleLeft="@drawable/select_handler"
                        android:textSelectHandleRight="@drawable/select_handler"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:fontFamily="@font/poppins_reqular"
                        android:id="@+id/phone_area"
                        android:inputType="phone"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInputLayout"
                    app:boxStrokeColor="#4894fe"
                    app:hintEnabled="true"
                    android:hint="비밀번호"
                    app:hintTextColor="#404B52"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="1dp"
                    app:endIconMode="password_toggle"
                    app:endIconDrawable="@drawable/password_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textColorHighlight="#4894fe"
                        android:textSelectHandle="@drawable/select_handler"
                        android:textSelectHandleLeft="@drawable/select_handler"
                        android:textSelectHandleRight="@drawable/select_handler"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:fontFamily="@font/poppins_reqular"
                        android:id="@+id/password_area"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/check_inputLayout"
                    app:boxStrokeColor="#4894fe"
                    app:hintEnabled="true"
                    android:hint="공인 인증코드(선택)"
                    app:hintTextColor="#404B52"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textColorHighlight="#4894fe"
                        android:textSelectHandle="@drawable/select_handler"
                        android:textSelectHandleLeft="@drawable/select_handler"
                        android:textSelectHandleRight="@drawable/select_handler"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:fontFamily="@font/poppins_reqular"
                        android:id="@+id/check_area"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="34dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/sign_button"
                android:layout_marginHorizontal="22dp"
                android:layout_gravity="center"
                android:backgroundTint="#4894fe"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <TextView
                    android:text="회원가입"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>


            <ImageView
                android:visibility="gone"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:src="@drawable/login_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginTop="22dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/google_login_button"
                    android:layout_marginEnd="12.5dp"
                    android:src="@drawable/google_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/apple_login_button"
                    android:layout_width="46dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="12.5dp"
                    android:src="@drawable/apple_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginBottom="80dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_reqular"
                    android:text="혹시 이미 계정이 있으신가요?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/move_login_in_button"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">

                    <TextView
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        android:id="@+id/move_login_text"
                        android:layout_marginStart="5dp"
                        android:textColor="#4894fe"
                        android:text="Log In"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>